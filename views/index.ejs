

<div class="row flex-lg-row-reverse align-items-center g-5 py-4 mb-4">
     <div class="col-12 col-lg-6">
          <img src="img/hero-image.png" width="607" height="510" class="d-block mx-lg-auto img-fluid" Loading="lazy"
               alt="Cooking With Node.js">
     </div>


     <div class="col-12 col-lg-6">
          <h1 class="display-5 fw-bold mb-3">Huge selection of Delicious recipe ideas</h1>
          <p class="lead">
               Explore our huge selection of delicious recepie ideas including; Easy desserts, delicious vegan and
               vegetarian dinner ideas, gorgeous pasta recipes, quick bakes, family-friendly meals and gluten-free
               recipes.
          </p>
          <div class="d-grid gap-2 d-md-flex justify-content-md-start">
               <a href="/explore-latest" class="btn btn-primary btn-dark btn-lg px-4 me-md-2">Explore Latest</a>
               <a href="/explore-random" class="btn btn-outline-secondary btn-dark btn-lg px-4 me-md-2">Show random</a>
          </div>
     </div>
</div>



<!-- categories start -->
<div class="row row-cols-2 row-cols-lg-6 g-2 g-lg-3 py-4 m-5  ">


     <% if(categories !='' ) { %>
          <% categories.forEach(function(category,index) {%>
               <a href="/categories/<%-category.name %>" class="col text-centre category__link " >
               <div class="category__img shadow">
                    <img class="w-100" src="img/<%- category.image %>" alt="<%- category.name %>" Loading="lazy">
               </div>
               <div class="pt-1">
                    <%- category.name%>
               </div>
               </a>
               <% }) %>
                    <% } %>
                         <a href="/categories" class="col text-centre category__link">
                              <div class="category__img shadow">
                                   <img class="w-100" src="img/view-all.jpg" alt="View-all-categories " Loading="lazy">
                              </div>
                              <div class="pt-1"> All Category</div>
                         </a>



</div>
<!-- categories end -->
<!-- latest recipes start -->

<section class="pb-4 pt-4 ">
     <div class="d-flex mb-2 align-items-center">
          <h2>Latest Recipes</h2>
          <a href="/explore-latest" class="ms-auto">View more</a>
     </div>


     <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3 ">

          <% if(food!='' ) { %>
               <% food.latest.forEach(function(recepie,index) {%>
          <a href="/recipe/<%-recepie._id%>" class="  category__link col text-centre ">
               <div class="category__img--large shadow">
                    <img class="w-100" src="uploads/<%-recepie.image%>" alt="<%-recepie.name%>"
                         Loading="lazy">
               </div>
               <div class="pt-1 mt-2"><%-recepie.name%></div>
          </a>
          <% }) %>
          <% } %>     
     </div>
</section>
<!-- latest end -->

