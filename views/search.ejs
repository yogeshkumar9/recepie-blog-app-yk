<h1 class="pb-4"> Search Results</h1>



<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3 ">

     <% if(recipe!='' ) { %>
          <% recipe.forEach(function(recepie,index) {%>
     <a href="/recipe/<%-recepie._id%>" class="  category__link col text-centre ">
          <div class="category__img--large shadow">
               <img class="w-100" src="/uploads/<%-recepie.image%>" alt="<%-recepie.name%>"
                    Loading="lazy">
          </div>
          <div class="pt-1 mt-2"><%-recepie.name%></div>
     </a>
     <% }) %>
     <% } %>  
    
         

 </div>